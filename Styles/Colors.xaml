<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">


    <!-- Background light -->
    <Color x:Key="BackgroundLightColor">#FFEFEFEF</Color>
    <SolidColorBrush x:Key="BackgroundLightBrush" Color="{StaticResource BackgroundLightColor}" />

    <!-- Background VERY light (yes, i'm fucking serious) -->
    <Color x:Key="BackgroundVeryLightColor">#FFFAFAFA</Color>
    <SolidColorBrush x:Key="BackgroundVeryLightBrush" Color="{StaticResource BackgroundVeryLightColor}" />

    <!-- Foreground main -->
    <Color x:Key="ForegroundMainColor">#686868</Color>
    <SolidColorBrush x:Key="ForegroundMainBrush" Color="{StaticResource ForegroundMainColor}" />

    <!-- Foreground light -->
    <Color x:Key="ForegroundLightColor">#FFFFFFFF</Color>
    <SolidColorBrush x:Key="ForegroundLightBrush" Color="{StaticResource ForegroundLightColor}" />

    <!-- Foreground dark -->
    <Color x:Key="ForegroundDarkColor">#FF000000</Color>
    <SolidColorBrush x:Key="ForegroundDarkBrush" Color="{StaticResource ForegroundDarkColor}" />

    <!--Red-->
    <Color x:Key="RedColor">#FFFF0000</Color>
    <SolidColorBrush x:Key="RedColorBrush" Color="{StaticResource RedColor}" />

</ResourceDictionary>