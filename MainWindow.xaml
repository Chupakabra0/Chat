<Window x:Class="Chat.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:valueConverters="clr-namespace:Chat.ValueConverters"
        mc:Ignorable="d"
        WindowStyle="None" WindowStartupLocation="CenterScreen"
        AllowsTransparency="True"
        Height="600" Width="900"
        MinHeight="{Binding MinHeight}" MinWidth="{Binding MinWidth}"
        Title="{Binding Title}"
        Icon="Resources/Logo/SmallLogo.ico"
        Style="{StaticResource MainWindow}">

    <WindowChrome.WindowChrome>
        <WindowChrome ResizeBorderThickness="{Binding ResizeBorderThickness, FallbackValue=6}"
                      CaptionHeight="{Binding TitleHeight, FallbackValue=40}"
                      GlassFrameThickness="0"
                      CornerRadius="0"/>
    </WindowChrome.WindowChrome>

    <UniformGrid Background="{StaticResource ForegroundLightBrush}">
        <Frame Content="{Binding CurrentPage, Converter={valueConverters:ApplicationPageValueConverter}}"></Frame>
    </UniformGrid>

</Window>